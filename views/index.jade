extends layout

block content
  .header
    .logo= title
    .button-container
      each val, key in logs
        button #{key}
    .buttons-right
      button#clearbutton Clear
      button#scrolllock Lock Scroll
  .logarea
    .startmessage Please choose a log to watch using the buttons above.
    .log-content
    a(href="https://github.com/onlywei/logwatcher", target="_blank")
      img(
        style="position: absolute; top: 0; right: 0; border: 0;"
        src="https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png"
        alt="Fork me on GitHub")


